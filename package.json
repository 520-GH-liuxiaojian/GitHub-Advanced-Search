{
    "name": "awesome-chrome-extension-boilerplate",
    "version": "1.0.0",
    "description": "an awesome boilerplate for chrome extension development!",
    "private": true,
    "author": "YuTengjing",
    "license": "MIT",
    "homepage": "https://github.com/tjx666/awesome-chrome-extension-boilerplate#readme",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/tjx666/awesome-chrome-extension-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/tjx666/awesome-chrome-extension-boilerplate/issues"
    },
    "scripts": {
        "start": "cross-env NODE_ENV=development ts-node --files -P ./server/tsconfig.json ./server",
        "devtools": "yarn start -- --devtools",
        "build": "cross-env NODE_ENV=production ts-node --files -P ./server/tsconfig.json ./server",
        "build-analyze": "yarn run build -- --analyze",
        "test": "yarn build",
        "lint": "yarn run lint-ts && yarn run lint-style",
        "lint-ts": "eslint -c .eslintrc --ext .ts,.tsx ./src/**/*.{ts,tsx}",
        "lint-style": "stylelint src/**/*.scss --syntax scss",
        "clean": "rimraf -rf ./dist",
        "reinstall": "rimraf -rf ./node_modules && yarn"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint -c .eslintrc"
        ],
        "*.{css,less,scss}": [
            "stylelint --config .stylelintrc.json"
        ],
        "*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "lodash": "^4.17.15",
        "normalize.css": "^8.0.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router-dom": "^5.1.2",
        "tiza": "^2.2.1"
